# Use official PHP image with Apache
FROM php:8.2-apache

# Install required system packages and PHP extensions
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libzip-dev \
    libxml2-dev \
    libonig-dev \
    libicu-dev \
    libmariadb-dev \
    libxslt1-dev \
    mariadb-client \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) gd mysqli pdo pdo_mysql zip intl xml soap xsl opcache mbstring \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Enable Apache mod_rewrite
RUN a2enmod rewrite

# Set working directory and prepare folders
WORKDIR /var/www/html
RUN rm -f index.html && mkdir -p moodledata

# Download and install Moodle
RUN curl -LO https://download.moodle.org/download.php/direct/stable500/moodle-latest-500.zip \
    && unzip moodle-latest-500.zip \
    && rm moodle-latest-500.zip \
    && chown -R www-data:www-data /var/www/html/moodle /var/www/html/moodledata

# Set Moodle as DocumentRoot
ENV MOODLE_DIR=/var/www/html/moodle
ENV MOODLE_DATA=/var/www/html/moodledata
ENV APACHE_DOCUMENT_ROOT=$MOODLE_DIR

# Change Apache DocumentRoot
RUN sed -i "s|DocumentRoot /var/www/html|DocumentRoot $MOODLE_DIR|g" /etc/apache2/sites-available/000-default.conf

# Copy custom PHP config
COPY moodle-php.ini /usr/local/etc/php/conf.d/moodle-php.ini

EXPOSE 80
